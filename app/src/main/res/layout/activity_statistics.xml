                    android:paddingStart="@dimen/_22sdp"
                    android:paddingEnd="@dimen/_28sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cairo_medium"
